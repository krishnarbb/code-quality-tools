 <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>net.revelc.code.formatter</groupId>
                    <artifactId>formatter-maven-plugin</artifactId>
                    <version>2.7.4</version>
                    <configuration>
                        <configFile>${project.parent.basedir}/JavaConventions.xml</configFile>
